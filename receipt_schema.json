{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "retailer": {
            "type": "string",
            "pattern": "^[\\w\\s\\-&]+$"
        },
        "purchaseDate": {
            "type": "string",
            "format": "date"
        },
        "purchaseTime": {
            "type": "string",
            "format": "time"
        },
        "items": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "shortDescription": {
                        "type": "string",
                        "pattern": "^[\\w\\s\\-]+$"
                    },
                    "price": {
                        "type": "string",
                        "pattern": "^\\d+\\.\\d{2}$"
                    }
                },
                "required": ["shortDescription", "price"]
            }
        },
        "total": {
            "type": "string",
            "pattern": "^\\d+\\.\\d{2}$"
        }
    },
    "required": ["retailer", "purchaseDate", "purchaseTime", "items", "total"]
}
